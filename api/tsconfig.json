{
    "compilerOptions": {
        "module": "commonjs",

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": false,
        "strictBuiltinIteratorReturn": false,

        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "skipLibCheck": true,

        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@services/*": ["services/*"],
            "@interceptors/*": ["interceptors/*"],
            "@entities/*": ["entities/*"],
            "@interfaces/*": ["interfaces/*"],
            "@dto/*": ["dto/*"],
            "@controllers/*": ["controllers/*"],
            "@constants/*": ["constants/*"],
            "@middlewares/*": ["middlewares/*"],
            "@decorators/*": ["decorators/*"],
            "@templates/*": ["templates/*"],
            "@pipes/*": ["pipes/*"],
            "@guards/*": ["guards/*"],
            "@utils/*": ["utils/*"],
            "@type/*": ["type/*"],
            "@filters/*": ["filters/*"],
            "@enums/*": ["enums/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
