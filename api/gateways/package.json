{
    "name": "gateway_api",
    "version": "0.0.1",
    "description": "API gateway applicatios for @Leprechaun project",
    "author": "August Luzanovsky",
    "private": false,
    "license": "UNLICENSED",
    "engines": {
        "node": "20.18.*",
        "npm": "10.8.*",
        "yarn": "1.22.*"
    },
    "workspaces": [
        "apps/private",
        "apps/public",
        "apps/ws",
        "core",
        "shared"
    ],
    "scripts": {
        "_prepare": "cd .. && husky install api/.husky",
        "dev:private": "nest start private_app --watch",
        "dev:public": "nest start public_app --watch",
        "dev:ws": "nest start ws_app --watch",
        "migrations:create": "typeorm migration:create -n upd --outputJs",
        "migrations:run": "typeorm migration:run",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start:debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --no-cache --max-warnings=0",
        "format": "prettier --write",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@keyv/redis": "^4.2.0",
        "@nestjs/cache-manager": "^3.0.0",
        "@nestjs/common": "^11.0.17",
        "@nestjs/core": "^11.0.1",
        "@nestjs/microservices": "^11.0.8",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/swagger": "^11.0.3",
        "@nestjs/typeorm": "^11.0.0",
        "amqp-connection-manager": "^4.1.14",
        "amqplib": "^0.10.5",
        "cache-manager": "^6.4.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cookie-parser": "^1.4.7",
        "express-session": "^1.18.1",
        "nodemailer": "^6.9.15",
        "pg": "^8.13.1",
        "redis": "^4.7.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@types/cache-manager": "^4.0.6",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.0",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.13.1",
        "@types/nodemailer": "^6.4.16",
        "@types/pg": "^8.11.11",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
