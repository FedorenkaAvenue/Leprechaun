{
    "name": "api",
    "version": "0.0.1",
    "description": "API application for @Leprechaun project",
    "author": "August Luzanovsky",
    "private": false,
    "license": "UNLICENSED",
    "scripts": {
        "prepare": "cd .. && husky install api/.husky",
        "dev": "nest start --watch",
        "migrations:create": "typeorm migration:create -n upd --outputJs",
        "migrations:run": "typeorm migration:run",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "engines": {
        "node": "16.15.0",
        "npm": "8.3.*",
        "yarn": "1.22.*"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.8",
        "@nestjs/core": "^9.0.8",
        "@nestjs/platform-express": "^9.0.8",
        "@nestjs/schedule": "^2.1.0",
        "@nestjs/swagger": "^6.0.5",
        "@nestjs/typeorm": "^9.0.0",
        "cache-manager": "^4.1.0",
        "cache-manager-redis-store": "^2.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "connect-redis": "^6.1.3",
        "cookie-parser": "^1.4.6",
        "express-session": "^1.17.3",
        "manticoresearch": "^3.1.0",
        "nodemailer": "^6.7.7",
        "pg": "^8.7.3",
        "pug": "^3.0.2",
        "redis": "^4.2.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.6",
        "swagger-ui-express": "^4.5.0",
        "typeorm": "^0.3.7",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.8",
        "@types/cache-manager": "^4.0.1",
        "@types/cache-manager-redis-store": "^2.0.1",
        "@types/connect-redis": "^0.0.18",
        "@types/cookie-parser": "^1.4.3",
        "@types/cron": "^2.0.0",
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.5",
        "@types/jest": "^28.1.6",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.6.4",
        "@types/nodemailer": "^6.4.5",
        "@types/pug": "^2.0.6",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "28.1.3",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.7",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.7.4"
    },
    "lint-staged": {
        "*": "echo LOL"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
