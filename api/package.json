{
    "name": "api",
    "version": "0.0.1",
    "description": "API application for @Leprechaun project",
    "author": "August Luzanovsky",
    "private": false,
    "license": "UNLICENSED",
    "engines": {
        "node": "20.18.*",
        "npm": "10.8.*",
        "yarn": "1.22.*"
    },
    "scripts": {
        "prepare": "cd .. && husky install api/.husky",
        "dev": "nest start --watch",
        "migrations:create": "typeorm migration:create -n upd --outputJs",
        "migrations:run": "typeorm migration:run",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --no-cache --max-warnings=0",
        "format": "prettier --write",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@elastic/elasticsearch": "^8.15.1",
        "@nestjs/cache-manager": "^2.3.0",
        "@nestjs/common": "^10.4.6",
        "@nestjs/core": "^10.4.6",
        "@nestjs/elasticsearch": "^10.0.2",
        "@nestjs/platform-express": "^10.4.6",
        "@nestjs/schedule": "^4.1.1",
        "@nestjs/swagger": "^7.4.2",
        "@nestjs/typeorm": "^10.0.2",
        "cache-manager": "^5.7.6",
        "cache-manager-redis-store": "^3.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "connect-pg-simple": "^10.0.0",
        "cookie-parser": "^1.4.7",
        "express-session": "^1.18.1",
        "nodemailer": "^6.9.15",
        "pg": "^8.13.1",
        "pug": "^3.0.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.20",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.5",
        "@nestjs/schematics": "^10.2.2",
        "@nestjs/testing": "^10.4.6",
        "@types/cache-manager": "^4.0.6",
        "@types/cache-manager-redis-store": "^2.0.4",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/connect-redis": "^0.0.23",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.0",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.8.1",
        "@types/nodemailer": "^6.4.16",
        "@types/pug": "^2.0.10",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.6",
        "jest": "29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
