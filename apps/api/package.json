{
    "name": "api_gateway",
    "version": "0.0.1",
    "description": "API gateway application for @Leprechaun project",
    "author": "August Luzanovsky",
    "engines": {
        "node": "20.19.*",
        "npm": "10.8.*",
        "yarn": "1.22.*"
    },
    "scripts": {
        "_prepare": "cd .. && husky install api/.husky",
        "dev": "nest start --watch",
        "migrations:create": "typeorm migration:create -n upd --outputJs",
        "migrations:run": "typeorm migration:run",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start:debug": "nest start --debug --watch",
        "prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --no-cache --max-warnings=0",
        "format": "prettier --write",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@fedorenkaavenue/leprechaun_lib_entities": "^0.0.13",
        "@fedorenkaavenue/leprechaun_lib_utils": "^0.0.11",
        "@grpc/grpc-js": "^1.13.4",
        "@grpc/proto-loader": "^0.7.15",
        "@nestjs/common": "^11.0.17",
        "@nestjs/core": "^11.0.1",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/platform-express": "^11.1.2",
        "@nestjs/swagger": "^11.0.3",
        "cookie-parser": "^1.4.7",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.0",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.13.1",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
